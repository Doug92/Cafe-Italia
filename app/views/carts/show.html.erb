<div class="cart_title">Your Cafe Italia Cart</div>
<table>
  <% @cart.line_items.each do |item| %>
    <tr>
      <td><%= item.quantity %>&times;</td>
      <td><%= item.product.name %></td>
      <td class="item_price"><%= currency_euro(item.total_price) %></td>
    </tr>

  <% end %>

  <tr class="total_line">
    <td colspan="2">Total</td>
    <td class="total_cell"><%= currency_euro(@cart.total_price) %></td>
  </tr>

</table>

<%= button_to 'Empty cart', @cart, :method => :delete,
    :confirm => 'Are you sure?' %>

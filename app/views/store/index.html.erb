

<% if notice %>
<p id="notice"><%= flash[:notice] %></p>
<% end %>

<h1>Menu</h1>

<% @products.each do |product| %>
  <div class="entry">
    <%= image_tag(product.image_url) %>
    <h3><%= product.name %></h3>
    <%= sanitize(product.ingredients) %>
    <div class="price">
<!-- START:currency -->

      <span class="price"><%= currency_euro(product.price) %></span>
<!-- START_HIGHLIGHT -->
      <%= button_to 'Add to Cart', line_items_path(:product_id => product) %>
<!-- END_HIGHLIGHT -->
<!-- END:currency -->
    </div>
  </div>
<% end %>
